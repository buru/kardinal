<% unless petitions.empty? %>
<section>
<h2>
  <% if user.is_a?(Recipient) %>Petitioned by<% else %>Petitions<% end %>
</h2>
<ul>
  <% petitions.each do |petition| %>
  <li>
    <h3><%= link_to petition.title, petition_url(petition) %></h3>
    <summary><%= petition.body %>
      <% if petition.victory %> Â· <small>Victory</small><% end %>
    </summary>
  </li>
  <% end %>
</ul>
<% end %>