<main id="user-edit">
  <form action="<%= user_url(@user) %>" method="post"
        enctype="multipart/form-data">
    <h1>Edit Profile</h1>
    <input type="hidden" name="_method" value="put">
    <input type="hidden" name="authenticity_token"
           value="<%= form_authenticity_token %>">

  <ul>
  <% @user.errors.full_messages.try(:each) { |message| %>
    <li><%= message %></li>
  <% } %>
  <% @contact_detail.errors.full_messages.try(:each) { |message| %>
    <li><%= message %></li>
  <% } %>
  </ul>

  <label>Photo:<br>
    <input type="file" name="user[image]" value="">
  </label><br>

  <label>Email:<br>
    <input type="text" name="user[email]"
           value="<%= @user.email %>">
  </label><br>

  <label>Name:<br>
    <input type="text" name="user[name]"
           value="<%= @user.name %>">
  </label><br>

  <label>Street Address:<br>
    <input type="text" name="contact_details[street_address]"
           value="<%= @contact_detail.street_address %>">
  </label><br>

  <label>City:<br>
    <input type="text" name="contact_details[city]"
           value="<%= @contact_detail.city %>">
  </label><br>

  <label>State:<br>
    <select name="contact_details[state]">
      <option value=""> </option>
      <% ContactDetail.list_states.each do |state| %>
      <option value="<%= state %>" <%= "selected" if @contact_detail.state == state %>>
        <%= state %>
      </option>
      <% end %>
    </select>
  </label><br>

  <label>Zip:<br>
    <input type="text" name="contact_details[zip]"
           value="<%= @contact_detail.zip %>">
  </label><br>

  <label>Country:<br>
    <input type="text" name="contact_details[country]"
           value="<%= @contact_detail.country %>">
  </label><br>

  <label>Phone:<br>
    <input type="text" name="contact_details[phone]"
           value="<%= @contact_detail.phone %>">
  </label><br>

  <label>Birthday:<br>
    <input type="date" name="contact_details[birthday]"
           value="<%= @contact_detail.birthday %>">
  </label><br>

  <label>Website:<br>
    http://<input type="text" name="contact_details[website]"
           value="<%= @contact_detail.website_form_show %>">
  </label><br>

  <label>Description:<br>
    <textarea name="contact_details[description]"><%= @contact_detail.description %></textarea>
  </label><br>

  <input type="submit">
</form>